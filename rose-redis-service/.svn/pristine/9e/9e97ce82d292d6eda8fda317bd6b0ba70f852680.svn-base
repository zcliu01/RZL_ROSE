<?xml version="1.0" encoding="UTF-8"?>
<Configuration>

	<Properties>
		<Property name="log-path">E:\var\log</Property>
<!-- 		<Property name="log-path">/var/log</Property> -->
		
		<Property name="fileName">${catalina.home:-${log-path}}/zrt-redis-service.log</Property>
		<Property name="filePattern" >${catalina.home:-${log-path}}/$${date:yyyy-MM}/zrt-redis-service-%d{yyyy-MM-dd}-%i.log</Property> <!-- 不压缩 -->
		<Property name="filePattern2">${catalina.home:-${log-path}}/$${date:yyyy-MM}/zrt-redis-service-%d{MM-dd-yyyy}-%i.log.gz</Property>	
		<Property name="fileName2">${catalina.home:-${log-path}}/zrt-redis-service.log</Property>
	</Properties>
	
	<Appenders>
		<RollingFile name="ROLLFILE" fileName="${fileName}" filePattern="${filePattern2}">
			
			<PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5p] [%t] %C{1}.%M():%L - %m%n" charset="UTF-8" />
			<DefaultRolloverStrategy fileIndex="max" max="9"/>
			<Policies>
				<TimeBasedTriggeringPolicy />
				<SizeBasedTriggeringPolicy size="500MB" />
			</Policies>
		</RollingFile>		
		
	
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%d [%-5p] [%t] (%F:%L) - %m%n" charset="UTF-8" />
		</Console>
	</Appenders>
	
	<Loggers>	
		<Logger name="com.zrt" level="DEBUG" additivity="true">
		</Logger>
		
		<Root level="INFO">
			<AppenderRef ref="STDOUT"/>
			<AppenderRef ref="ROLLFILE" />
		</Root>
	</Loggers>
	
</Configuration>
