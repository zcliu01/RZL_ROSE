<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.zrt.infor.mapper.inforCommons.InforCommonsMapper">
	
	
	<select id="inforCountList" resultType="java.util.HashMap">
		SELECT
			pir.category,
			count(in_id) AS count
		FROM
			plat_infor_inbox pii
			JOIN plat_infor_record pir ON pii.infor_no = pir.infor_no
		WHERE pii.receiver_id = #{mapParam.emp_id}
			AND pii.is_show = '1'
			AND pii.deal_status = '0'
		GROUP BY
			pir.category
	</select>
	<select id="getFlowInfor" resultType="java.util.HashMap">
		SELECT
			pir.infor_no
		FROM
			plat_infor_record pir
		WHERE
			pir.bus_id=#{bus_id}  and pir.bus_domain LIKE CONCAT('%',#{bus_domain},'%')
	</select>
	
	<!--批量插入讯息收件表-->
	<insert id="inforAllInsert" useGeneratedKeys="true" keyProperty="in_id"  parameterType="java.util.List">
		INSERT INTO plat_infor_inbox (infor_no,out_id,receiver_id,receiver_name,emp_order,receiver_type,org_id,org_name,deal_status,is_show) 
			VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(
			#{item.infor_no,jdbcType=VARCHAR},
			#{item.out_id,jdbcType=VARCHAR},
			#{item.receiver_id,jdbcType=VARCHAR},
			#{item.receiver_name,jdbcType=VARCHAR},
			#{item.emp_order,jdbcType=INTEGER},
			#{item.receiver_type,jdbcType=VARCHAR},
			#{item.org_id,jdbcType=VARCHAR},
			#{item.org_name,jdbcType=VARCHAR},
			#{item.deal_status,jdbcType=VARCHAR},
			#{item.is_show,jdbcType=CHAR})
		</foreach>
	</insert>
	<!--批量插入讯息处理表-->
	<insert id="inforDealInsert" useGeneratedKeys="true" keyProperty="detail_id"  parameterType="java.util.List">
		INSERT INTO plat_infor_detail (in_id,status,create_id,create_date_time) 
			VALUES
		<foreach collection="list" item="item" index="index"
			separator=",">
			(
			#{item.in_id,jdbcType=VARCHAR},
			#{item.status,jdbcType=VARCHAR},
			#{item.create_id,jdbcType=VARCHAR},
			#{item.create_date_time,jdbcType=CHAR})
		</foreach>
	</insert>
</mapper>