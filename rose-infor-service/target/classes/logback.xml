<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	
	<!-- <property name="LOG_HOME" value="F:\var\log" />-->
	<property name="LOG_HOME" value="/var/log" /> 
	
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] %logger{50}:%line - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
 
    <appender name="ROLLFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${catalina.home:-${LOG_HOME}}/zrt-infor-service-%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] %logger{50}:%line - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>
    
    <logger name="com.zrt" level="WARN" addtivity="true">
	</logger>
	
	<root level="WARN">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="ROLLFILE" />
	</root>

</configuration> 